<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_indent_affirm"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.team3.baby.module.fragments_shopping.indent_activity.IndentAffirmActivity">

    <include layout="@layout/shopping_head_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--地址布局-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"

            >
                <!--无地址布局-->
                <LinearLayout
                    android:id="@+id/no_address_layout_indent_affirm_activity"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="您的收货地址为空，点此添加收货地址"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/iv_add_address_indent_affirm_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:src="@mipmap/arrow_next"/>

                </LinearLayout>

                <!--有地址布局-->

                <LinearLayout android:id="@+id/have_address_layout_indent_affirm_activity"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"

                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical">
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:paddingLeft="50dp"
                                  android:id="@+id/nameAndPhone_indent_affirm_activity"
                                  android:textColor="#000000"
                                  android:text="11111111   22222"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="5dp"
                                  android:paddingLeft="50dp"
                                  android:singleLine="true"
                                  android:text="XXXXXXXX"
                                  android:id="@+id/myAddress_indent_affirm_activity"/>
                    </LinearLayout>
                    <ImageView android:layout_width="wrap_content"
                               android:src="@mipmap/arrow_next"
                               android:layout_marginRight="10dp"
                               android:layout_gravity="center"
                               android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_cart2_delivery_line"/>

            <View style="@style/indent_affirm_cut_off_rule"/>

            <!--单商品简介布局-->
            <LinearLayout
                android:id="@+id/layout_single_shop_affirm_indent_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_thumbnail_affirm_indent_activity"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tv_shop_title_affirm_indent_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="1111111111111"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_shop_price_affirm_indent_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1111111111111"
                            android:textColor="@color/red"
                            android:textSize="17sp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_shop_num_affirm_indent_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x2"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_shop_list_affirm_indent_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/arrow_next"/>

            </LinearLayout>
            <!--多商品布局-->

            <LinearLayout android:id="@+id/layout_more_shop_affirm_indent_activity"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageView android:id="@+id/iv_more1_affirm_indent_activity"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:layout_marginLeft="5dp"/>
                <ImageView android:id="@+id/iv_more2_affirm_indent_activity"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:layout_marginLeft="5dp"/>
                <ImageView android:id="@+id/iv_more3_affirm_indent_activity"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:layout_marginLeft="5dp"/>
                <ImageView android:layout_width="20dp"
                           android:layout_height="80dp"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           android:src="@mipmap/act_goodsdetail_icon_more"

                />
                <TextView android:id="@+id/tv_count_affirm_indent_activity"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:text="共7件"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="80dp"
                           android:layout_marginRight="10dp"
                           android:src="@mipmap/arrow_next"/>
            </LinearLayout>


            <View style="@style/indent_affirm_cut_off_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="支付方式"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_pay_affirm_indent_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/arrow_next"/>
            </LinearLayout>

            <View style="@style/indent_affirm_cut_off_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="优惠券"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无可用"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/arrow_next"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="苏宁卡"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无可用"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/arrow_next"/>
            </LinearLayout>

            <View style="@style/indent_affirm_cut_off_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="发票信息"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/arrow_next"/>
            </LinearLayout>

            <View style="@style/indent_affirm_cut_off_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="找人代付"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/arrow_next"/>
            </LinearLayout>

            <View style="@style/indent_affirm_cut_off_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="商品总额"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_money_pay_affirm_indent_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="¥1111"
                    android:textColor="@color/red"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="运费"
                    android:textColor="#999999"
                    android:textSize="17sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_freight_pay_affirm_indent_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="+¥0.00"
                    android:textColor="@color/red"
                    android:textSize="17sp"/>
            </LinearLayout>

            <View style="@style/indent_affirm_cut_off_rule"/>

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="实付金额："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_zong_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="$1111"
            android:textColor="@color/red"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#999999"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="提交订单"
            android:id="@+id/tv_submit_affirm_indent_activity"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
