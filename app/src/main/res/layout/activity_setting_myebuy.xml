<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#cccccc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_huiyuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textSize="25sp"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tv_huiyuan_myebuy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="。。。"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="消息提醒设置"
            android:textSize="22sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@mipmap/arrow_drawer" />


    </LinearLayout>

    <include layout="@layout/include_xixian"></include>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="消息图片缓存"
            android:textSize="22sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@mipmap/arrow_drawer" />


    </LinearLayout>

    <include layout="@layout/include_xixian"></include>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="开启省流量模式"
            android:textSize="22sp" />


        <CheckBox
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/denglu_selector"
            android:button="@null"
            android:checked="true"
            android:padding="5dp" />


    </LinearLayout>

    <include layout="@layout/include_xixian"></include>

    <TextView
        android:id="@+id/tv_tuivhu_shezhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff9933"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="22sp" />
</LinearLayout>
