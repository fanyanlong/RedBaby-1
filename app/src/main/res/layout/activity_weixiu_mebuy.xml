<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_tuihuan_tou"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#cccccc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_tuihuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退换/维修申请"
            android:textSize="22sp" />


        <TextView

            android:id="@+id/tv_juhao_tuihuan"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="。。。"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_netorder"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablelayout_tuihuan_myebuy"
            android:layout_width="match_parent"
            android:layout_height="55dp"></android.support.design.widget.TabLayout>

        <include layout="@layout/include_huige"></include>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_tuihuan_myebuy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
