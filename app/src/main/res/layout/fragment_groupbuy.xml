<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/danhui"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_image_jianju"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="乐拼购"
            android:textColor="@color/hei"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imager_right_fragment_groupbuy"
            style="@style/text_image_jianju"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ucwv_ebuy"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huise"></View>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_fragment_groupbuy"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        app:tabGravity="center"
        app:tabIndicatorColor="@android:color/holo_red_dark"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabPaddingBottom="10dp"
        app:tabPaddingTop="5dp"
        app:tabSelectedTextColor="@android:color/holo_red_dark"></android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/fram_fragment_groupbuy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"></FrameLayout>
</LinearLayout>
