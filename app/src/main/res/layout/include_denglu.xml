<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textSize="25sp" />


    </LinearLayout>

    <include layout="@layout/include_huige"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:text="账号" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="手机号/邮箱/用户名/门店会员卡" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_action_next_pressed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:text="密码" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入6-12位易购密码" />

        <RadioGroup
            android:id="@+id/radiogroup"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xuanzeabc"
                android:button="@null"
                android:text="  ABC"
                android:textColor="@drawable/xuanzeziti"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/remen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/xuanzedian"
                android:button="@null"
                android:text=" ***"
                android:textColor="@drawable/xuanzeziti"
                android:textSize="16sp" />
        </RadioGroup>


    </LinearLayout>
</LinearLayout>
