<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_myebuy_include"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textSize="25sp" />


    </LinearLayout>

    <include layout="@layout/include_huige"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:layout_width="38dp"
            android:layout_height="55dp"
            android:text="账号" />

        <EditText
            android:id="@+id/et_zhanghao_include"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="手机号/邮箱/用户名/门店会员卡" />

        <ImageView
            android:id="@+id/iv_zhanghao_include"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_action_next_pressed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:layout_width="38dp"
            android:layout_height="55dp"
            android:text="密码" />

        <EditText
            android:id="@+id/et_mima_include"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入6-12位易购密码"
            android:password="true" />


        <CheckBox
            android:id="@+id/rb_abc_myebuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/denglu_selector"
            android:button="@null"
            android:checked="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccccc9"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#999999"
            android:text="登录" />
    </LinearLayout>


</LinearLayout>
