<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_scan_include"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_scan_top"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/linear_inquire_include"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/include_homefragment_head_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_search_home"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <EditText
                android:textSize="15sp"
                android:hint="商品/店铺"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_mes_include"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_mes_top"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>