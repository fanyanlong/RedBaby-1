<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_nine_headline_image"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_home_nine_bigpicture_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>



        <TextView
            android:id="@+id/item_home_nine_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_below="@+id/item_home_nine_bigpicture_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_home_nine_dianjiu_image"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/item_home_nine_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_name_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_desc_text"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/item_home_nine_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="¥95.0"
                android:textColor="#ff00"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circular_bead"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_visitors"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="2人团"
                    android:textColor="#ff00"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#ff00"
                    android:gravity="center"
                    android:text="立即开团"
                    android:textColor="#ffffff"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/item_home_nine_dianjiu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_home_nine_desc_text"
            android:layout_below="@+id/item_home_nine_bigpicture_image"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home_evaluate_pro_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_bigpicture_image"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/item_home_nine_name_text"
            android:text="包邮"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_home_nine_bigpicture1_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/item_home_nine_name1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_below="@+id/item_home_nine_bigpicture1_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_home_nine_dianjiu1_image"/>

        <TextView
            android:id="@+id/item_home_nine_desc1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_name1_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_desc1_text"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_nine_price1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="¥95.0"
                android:textColor="#ff00"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circular_bead"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_visitors"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="2人团"
                    android:textColor="#ff00"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#ff00"
                    android:gravity="center"
                    android:text="立即开团"
                    android:textColor="#ffffff"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/item_home_nine_dianjiu1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_home_nine_desc1_text"
            android:layout_below="@+id/item_home_nine_bigpicture1_image"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home_evaluate_pro_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_home_nine_bigpicture1_image"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/item_home_nine_name1_text"
            android:text="包邮"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:text="查看更多"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/img_more_floor"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>